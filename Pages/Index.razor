@inject InputService input_service;

@page "/"
<div style="position: absolute; margin: 0px; top: 0px; left: 0px; width: 100%; height: 100%;"

@onmousedown=event_actions.Events[EventActionGroup.OnMouseDown]
@onmousedown:stopPropagation="true"

@onmouseover=event_actions.Events[EventActionGroup.OnMouseOver]
@onmousemove=event_actions.Events[EventActionGroup.OnMouseMove]
@onmouseup=event_actions.Events[EventActionGroup.OnMouseUp]
>
<DockSpace Width="100%" Height="100%"/>
</div>

@code{
    public EventActionGroup event_actions { get; set; } = new EventActionGroup
    {
        ID = "bodyspace",
    };

    protected override async Task OnInitializedAsync() {
        input_service.RegisterElement(this.event_actions);
        await Task.CompletedTask;
    }
}
